<%- include('./layout/header.ejs')%>
  <div class="container hero-list">
    <form id="form">
      <div class="form-group">
        <label>英雄名称</label>
        <input type="text" name="name" class="form-control" placeholder="请输入英雄名称">
      </div>
      <div class="form-group">
        <label>英雄地址</label>
        <input type="text" name="address" class="form-control" placeholder="请输入英雄地址">
      </div>
      <div class="form-group">
        <label>英雄性别</label>
        <div class="radio">
          <label>
            <input type="radio" name="gender" value="男" checked>男
          </label>
          <label>
            <input type="radio" name="gender" value="女">女
          </label>
        </div>
      </div>
      <button type="submit" class="btn btn-success">点击保存</button>
    </form>
  </div>
  <%- include('./layout/footer.ejs')%>

<script>
  $('.btn-success').on('click',function(e) {
    e.preventDefault();
    // console.log(123);
    $.ajax({
      type: 'post',
      url: './addHero',
      data: $('#form').serialize(),
      dataType:'json',
      success: function(res) {
        console.log(res);
        if(res.code == 200 ) {
          window.location.href = './'
        }
        
      }
    })
    
  })
</script>