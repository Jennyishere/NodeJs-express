<%- include('./layout/header.ejs')%>
  <div class="container hero-list">
    <form id="form">
      <input type="hidden" name="id" value="<%= data.id %>">
      <div class="form-group">
        <label class="col-sm-2 control-label">英雄名称</label>
        <div class="col-sm-10">
          <input type="text" name="name" class="form-control" value="<%= data.name %>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">性别</label>
        <div class="col-sm-10">
          <label class="radio-inline">
            <input type="radio" value="男" name="gender" <% if (data.gender == '男') { %>checked <% } else { %> <% } %> > 男
          </label>
          <label class="radio-inline">
            <input type="radio" value="女" name="gender"<% if (data.gender == '女') { %>checked <% } else { %> <% } %> > 女
          </label>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">英雄地址</label>
        <div class="col-sm-10">
          <input type="text" name="address" class="form-control" value="<%= data.address %>">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">创建时间</label>
        <div class="col-sm-10">
          <%= data.date %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-success">保存修改</button>
        </div>
      </div>
    </form>
  </div>
  <%- include('./layout/footer.ejs')%>
<script>
  $('.btn-success').on('click',function(e) {
    e.preventDefault();
    $.ajax({
      type:'post',
      url:'/editHero',
      dataType:'json',
      data: $('#form').serialize(),
      success: function(res) {
        // console.log(res);
        if(res.code == 200) {
          window.location.href = './'
        }
        
      }
    })
  })
</script>